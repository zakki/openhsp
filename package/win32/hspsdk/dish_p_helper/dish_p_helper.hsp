*project_command_line_get

	copy_cmd_line = dirinfo(4)

	copy_cmd_line = strtrim(copy_cmd_line, 0, ' ')
	if strmid(copy_cmd_line, 0, strlen(COMMAND_LINE_P)) == COMMAND_LINE_P {
		copy_cmd_line = strmid(copy_cmd_line, strlen(COMMAND_LINE_P), strlen(copy_cmd_line) - strlen(COMMAND_LINE_P))
