		loop

		if win_pos_x < 0 : win_pos_x = 0
		if win_pos_y < 0 : win_pos_y = 0

		if win_pos_x > ginfo_dispx : win_pos_x = 0
		if win_pos_y > ginfo_dispy : win_pos_y = 0

		noteunsel
	}

	return

