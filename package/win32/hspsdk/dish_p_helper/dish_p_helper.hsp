#deffunc local func_read_file str file_name, var str_buff, var re_utf8_flag

	re_utf8_flag = FALSE

	exist file_name

	if strsize >= 0 {
		sdim str_buff, strsize
		notesel str_buff
		noteload file_name
		noteunsel

		bom1 = 0
		bom2 = 0
		bom3 = 0
		bom1 = peek(str_buff, 0)
		bom2 = peek(str_buff, 1)
		bom3 = peek(str_buff, 2)

		if bom1 == UTF8_BOM_B {
			if bom2 == UTF8_BOM_O {
				if bom3 == UTF8_BOM_M {
					str_buff		= strmid(str_buff, 3, strlen(str_buff) - 3)
					re_utf8_flag	= TRUE
				}
			}
		}
	}

	return

