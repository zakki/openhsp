#include "obaq.as"

	;
	;	スペースキーを押すたびにオブジェクトを追加
	;	[ESC]で終了します
	;
	randomize		; 乱数の初期化
	screen 0,640,480	; ウィンドウ初期化

	qreset			; OBAQの初期化
*main
	;	メインループ
	;
	redraw 0		; 画面の更新を開始
	gradf ,,,,1,0,128	; 画面クリア
	qexec			; OBAQによるオブジェクトの更新

	stick key,15		; キーの取得
	if key&128 : end	; [ESC]キーで終了
	if key&16 {
		qaddpoly my, rnd(3)+3, 96,24,0		; 多角形を追加
	}
	qdraw			; オブジェクトの描画

	color 255,255,255
	pos 0,0:mes "Push [Space]"	; 文字を表示

	redraw 1		; 画面の更新を終了
	await 12		; 一定時間待つ
	goto *main
